<div class="container">
  <div class"row">
    <h3 class="center-align">Find a Pairing Partner</h3>
  </div>
    <div class="row">
      <div class="col s12 m6 offset-m3 ">
        <div class="card">
          <div class="card-image">
            <img src=<%= @user.avatar_url %> class:"image-responsive">
            <span class="card-title"><%= @user.login %></span>
          </div>
          <div class="card-content">
            <p><%= @user.description %></p>
            
            <p><strong>Skills: </strong><%= @user.languages.pluck(:name).to_sentence %>
            </p>
          </div>
          <div class="card-action">
            <div class="row">
              <div class="col sm4">
                <%= button_to("Reject", matches_path(pair_id: @user.id, status: "Reject"), class:" btn btn-large red darken-1" ) %>
              </div>
              <div class="col sm4 offset-s5 grid-example right-align ">
                <%= button_to("Approve", matches_path(pair_id: @user.id, status: "Pending"), class:" btn btn-large green lighten-2" ) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>